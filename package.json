{
	"name": "e-commerce-website",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev:css": "tailwindcss -i ./src/styles/input.css -o ./public/assets/css/index.css --watch",
		"dev:js": "webpack --watch",
		"dev": "concurrently \"npm run dev:css\" \"npm run dev:js\"",
		"build:css": "tailwindcss -i ./src/styles/input.css -o ./public/assets/css/index.css",
		"build:js": "webpack",
		"build": "concurrently \"npm run build:css\" \"npm run build:js\""
	},
	"devDependencies": {
		"@babel/core": "^7.25.2",
		"@babel/preset-env": "^7.25.3",
		"babel-loader": "^9.1.3",
		"concurrently": "^8.2.2",
		"css-loader": "^7.1.2",
		"style-loader": "^4.0.0",
		"tailwindcss": "^3.4.7",
		"webpack": "^5.93.0",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"jquery": "^3.7.1",
		"magic.css": "^1.4.8",
		"remixicon": "^4.3.0",
		"swiper": "^11.1.9"
	}
}
